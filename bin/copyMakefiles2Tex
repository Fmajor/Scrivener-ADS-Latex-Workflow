#!/bin/bash
folders=$(ls *.tex)
for each in ${folders}
do
    if [ -d "$each" ]; then
        cat bin/compileTexMakefile | sed s/compileGroupStr/${each%.*}/g > ${each}/makefile
        cat bin/compileTex | sed s/compileGroupStr/${each%.*}/g > ${each}/compileTex
        chmod +x ${each}/compileTex
    fi
done

